<form method="post" action="/game/<%= @a_game.id %>/update">
  <input type="hidden" name="_method" value="put">
  <div>
    <label>Game Title:</label>
    <input type="text" name="title" value="">
  </div>
  <div>
    <label>Health:</label>
    <input type="text" name="health" value="">
  </div>
  <div>
    <label>Number of Cards in a deck:</label>
    <input type="text" name="deck_size" value="">
  </div>
  <div>
    <label>Number of Cards on hand:</label>
    <input type="text" name="hand_size" value="">
  </div>
  <div><input type="submit" value="Submit"></div>
</form>