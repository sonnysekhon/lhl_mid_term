<% if current_user %>

<div class="container">
<h3>You're game library:</h3>
<hr>

 <div class="row">
    <div class="col s12 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Create a New Game!</span>
          <p>I am a very simple app. I am good at creating cards with a attack and health.
          You can also change player health, deck size, and starting hand count.</p>
        </div>
        <div class="card-action amber accent-3">
          <center>
          <a style="color: white;"href="game/create">START CREATING!</a>
          </center>
        </div>
      </div>
    </div>
  </div>
  <% @games.each do |game|%>
   <div class="row">
    <div class="col s12 m4">
      <div class="card teal darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= game.title %></span>
        </div>
        <div class="card-action amber accent-3">
          <a style="color: white;"href="/game/<%= game.id %>/play">PLAY<a>
          <a style="color: white;"href="/game/<%= game.id%>">VIEW<a>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>



<% end %>